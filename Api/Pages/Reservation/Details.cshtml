@page
@model Api.Pages.Reservation.DetailsModel
@{
    ViewData["Title"] = "Plane's Details";
    int i = 1;
}
<partial name="_Notification" />
<h3>Here Is The Reservation's Information</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewReservationResponse.DepartureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewReservationResponse.DepartureDate)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewReservationResponse.DepartureCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewReservationResponse.DepartureCity)
        </dd>
    </dl>

    @foreach (var item in Model.NewReservationResponse.PassengerResponses)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Passenger @i
            </dt>
            <dd class="col-sm-10" title="@item.Email">
                @item.LastName @item.FirstName - Seat Number : @item.LastSeatNumber
            </dd> 
        </dl>
        i++;
    }
</div>
